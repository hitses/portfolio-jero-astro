---
import Layout from '../layouts/Layout.astro'
import Card from '../components/Card.astro'
import Badge from '../components/Badge.astro'
import SocialBadge from '../components/SocialBadge.astro'
import Section from '../components/Section.astro'
import Experience from '../components/Experience.astro'
import Projects from '../components/Projects.astro'
import Linkedin from '../icons/Linkedin.astro'
import Github from '../icons/Github.astro'
import Mail from '../icons/Mail.astro'
import Work from '../icons/Work.astro'
import Code from '../icons/Code.astro'

const yearsWorking = new Date().getFullYear() - 2019
---

<Layout
  title="Jerónimo's portfolio | Web developer and programmer"
  description='Jerónimo Gascón is a web developer and programmer specialized in backend for amazing applications. Located in Alicante, Spain 🇪🇸'
>
  <main class='px-4'>
    <Section class='py-[75px]'>
      <h1
        class='text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-4 lg:pb-10'
      >
        Hi, I'm Jerónimo! <a
          href='https://www.linkedin.com/in/jerogassan/'
          target='_blank'
          rel='noopener'
          class='flex justify-center items-center'
        >
          <Badge>Available for hire</Badge>
        </a>
      </h1>
      <h2 class='text-xl lg:text-2xl opacity-80 text-wrap max-w-[600px]'>
        <span>+{yearsWorking} years of experience.</span>
         Web developer located in<span class='text-[#D19501]'>
          Alicante, Spain 🇪🇸</span
        >. Specialized in backend for amazing applications.
      </h2>
      <nav class='flex gap-2 mt-5 flex-wrap'>
        <SocialBadge href='https://www.linkedin.com/in/jerogassan/'>
          <Linkedin class='size-3 lg:size-[14px]' /> LinkedIn
        </SocialBadge>
        <SocialBadge href='https://github.com/hitses'>
          <Github class='size-[14px] lg:size-[16px]' /> Github
        </SocialBadge>
        <SocialBadge href='https://github.com/hitses'>
          <Mail class='size-4 lg:size-[20px]' /> contact@jerogassan.dev
        </SocialBadge>
      </nav>
    </Section>

    <Section id='experience' class='py-[75px]'>
      <h2 class='text-3xl font-semibold mb-5 flex gap-x-2 items-center'>
        <Work class='size-7' />
         Work experience
      </h2>
      <Experience />
    </Section>

    <Section id='projects' class='py-[75px]'>
      <h2 class='text-3xl font-semibold mb-5 flex gap-x-2 items-center'>
        <Code class='size-7' />
         Projects
      </h2>
      <Projects />
    </Section>
  </main>
</Layout>
